<h1>Editing item</h1>

<%= render "form", item: @item %>

<br>

<div>
  <%= link_to "Show this item", @item, class: 'btn btn-outline-dark' %>
  <%= link_to "Back to items", items_path, class: 'btn btn-outline-dark' %>
  <%= link_to "Delete", item_path(@item), class: 'btn btn-outline-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this item?' } %>
</div>
